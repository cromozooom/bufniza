
mixin carousel(img, fraze, ctacopy, href, clase)
	.item(class="#{clase}")
		img(src='assets/images/slider/#{img}.jpg', alt='slide01')
		.carousel-caption
			p.lead= fraze
			a.btn.btn-ghost-default.btn-lg(href="#{href}")= ctacopy

section.carousel
	#carousel-example-generic.carousel.slide(data-ride='carousel')
		// Indicators
			ol.carousel-indicators
				li.active(data-target='#carousel-example-generic', data-slide-to='0')
				li(data-target='#carousel-example-generic', data-slide-to='1')
				li(data-target='#carousel-example-generic', data-slide-to='2')
		// Wrapper for slides
		.carousel-inner(role='listbox')
			+carousel("discount","","Vezi detalii","","active" )
			+carousel("Limbi straine","","Vezi detalii","","" )
			+carousel("lumeaCulorilor_v01","O lume colorata ca in povesti","Vezi detalii","","" )
			+carousel("actorie","Pentru o poveste spusa pentru trup si suflet","Vezi detalii","","" )
			+carousel("descoperaLumea","Pe copilul tau il asteapta o calatorie pe cinste in istoria și progresul civilizației umane!","Vezi detalii","","" )
			+carousel("lego","Construieste-ti viitorul. Acum.","Vezi detalii","","" )

		// Controls
		a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
			span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
			span.sr-only Previous
		a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
			span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
			span.sr-only Next