extends views/layout

block content
	section.listaCursuri
		.container-fluid
			.row
				h3.text-center Alege locatia cea mai apropiata
				br
				//- .container-fluid.no-gutter.cover
				//- 	.row
				//- 		.col-xs-12
				//- 			img.img-responsive(src="assets/images/header_cursuri.jpg" alt="...")
				//- Nav tabs
			.row.coursList
				ul.sediile.nav.nav-tabs(role='tablist')
					li.active(role='presentation')
						a(href='#sudului', aria-controls='sudului', role='tab', data-toggle='tab')
							h4.text-center 
								small Club
								br
								| Piata Sudului
					li(role='presentation')
						a(href='#cismigiu', aria-controls='cismigiu', role='tab', data-toggle='tab')
							h4.text-center
								small Club
								br
								| Cismigiu
				//- Tab panes
				.tab-content
					br
					#sudului.tab-pane.active(role='tabpanel')
						.col-xs-12.col-md-3.col-lg-2
							h5 Filtreaza cursurile
							div.list-group
								a(href="#").list-group-item.active
									.badge 16
									| Toate
								a(href="#").list-group-item
									.badge 14
									| Stiinte
								a(href="#").list-group-item
									.badge 5
									| Arta si creeatie
								a(href="#").list-group-item
									.badge 2
									| Divertisment
								a(href="#").list-group-item
									.badge 5
									| Inteligenta
						.col-xs-12.col-md-9.col-lg-10
								h5 Toate cursurile din Club Piata Sudului
								block cursThumb
									- view = "cursThumbCateg"
									.row
										include views/courseThumb
										
					#cismigiu.tab-pane(role='tabpanel')
						.col-xs-12.col-md-3.col-lg-2
							h5 Filtreaza cursurile
							div.list-group
								a(href="#").list-group-item.active
									.badge 0
									| Toate
								a(href="#").list-group-item
									.badge 0
									| Stiinte
								a(href="#").list-group-item
									.badge 0
									| Arta si creeatie
								a(href="#").list-group-item
									.badge 0
									| Divertisment
								a(href="#").list-group-item
									.badge 0
									| Inteligenta
