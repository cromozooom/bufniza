	section.form
		.container.contactForm#form
			.row
				.col-xs-12.col-md-9
					// Nav tabs
					ul.nav.nav-tabs(role="tablist")
						li.active(role="presentation")
							a(href="#contact" aria-controls="contact" role="tab" data-toggle="tab") Contact
						li(role="presentation")
							a(href="#profesor" aria-controls="profile" role="tab" data-toggle="tab") Profesor Contatc
					// Tab panes
					.tab-content
						.tab-pane.active(role="tabpanel" class="" id="contact")
							br
							form
								.row
									.col-xs-12.col-sm-6
										.form-group
											label(for="Numele")
