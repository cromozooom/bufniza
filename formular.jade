									input#inlineCheckboxVineri(type="checkbox" value="optionVineri")
									| Vineri
								label.checkbox-inline
									input#inlineCheckboxSimbata(type="checkbox" value="optionSimbata" disabled="disabled")
									| Simbata
								label.checkbox-inline
									input#inlineCheckboxDuminica(type="checkbox" value="optionDuminica" disabled="disabled")
									| Duminica

