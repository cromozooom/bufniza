extends views/layout

block content
	section.form
		.container-fluid
			.col-xs-12
				// title Post
				h1.text-center
					| Formular de inscriere
					br
					small ideal ar fi sa completati formularul de mai jos
		.container
			.row
				.col-xs-12
					form
						.row
							.col-xs-12
								h3.text-center Datele dumnevostra
							.col-xs-12
								.form-group.has-success
									label(for="Numele")
										| Numele dumenvoastra
									input.form-control.Numele.input-lg(type="input" placeholder="numele complet va rugam")

							.col-xs-12.col-sm-6
								.form-group.has-warning
									label(for="Email")
										| Email
									input.form-control.Email.input-lg(type="input" placeholder="email de contact")

							.col-xs-12.col-sm-6
								.form-group
									label(for="Tel")
										| Telefon
									input.form-control.Tel.input-lg(type="input" placeholder="telefon sau mobil")
							.col-xs-12.sectionPadding
								h3.text-center Datele Copilului
							.col-xs-12.col-sm-6
								.form-group
									label(for="Prenumele")
										| Prenumele
									input(type="input" class="form-control" id="Prenumele copilului" placeholder="prenumele copilului")
								.form-group
									label(for="dataNastere")
										| Data de nastere a copilului
									input(type="input" class="form-control" id="dataNastere" placeholder="in acest format dd/mm/yyyy")
								.form-group
									label(for="vista")
										| Categoria de virsta
									select(id="disabledSelect" class="form-control")
										option Alege categoria de virsta
										option 5-7 ani
										option 8-12 ani
										option 12-14 ani

							.col-xs-12.col-sm-6
								.form-group
									label(for="exampleInputEmail1")
										| Ce pasiuni are copilul dumenvoastra?
									textarea(class="form-control" rows="8" placeholder="sau daca aveti alte observatii...")
						.row
							.col-xs-12.sectionPadding
								h3.text-center  Optiuni pentru acest curs
							.col-xs-12.col-sm-6.text-center
								h4 Ce zile preferati
								p.small alegeti din optiunile disponibile
								label.checkbox-inline
									input#inlineCheckboxLuni(type="checkbox" value="optionLuni")
									| L
								label.checkbox-inline
									input#inlineCheckboxMarti(type="checkbox" value="optionMarti")
									| M
								label.checkbox-inline
									input#inlineCheckboxMiercuri(type="checkbox" value="optionMiercuri")
									| M
								label.checkbox-inline
									input#inlineCheckboxJoi(type="checkbox" value="optionJoi")
									| J
								label.checkbox-inline
									input#inlineCheckboxVineri(type="checkbox" value="optionVineri")
									| V
								label.checkbox-inline(disabled="disabled")
									input#inlineCheckboxSimbata(type="checkbox" value="optionSimbata" disabled="disabled")
									| S
								label.checkbox-inline(disabled="disabled")
									input#inlineCheckboxDuminica(type="checkbox" value="optionDuminica" disabled="disabled")
									| D

							.col-xs-12.col-sm-6.text-center
								h4 Care e orarul preferat
								p.small alegeti din optiunile disponibile
								label.checkbox-inline
									input#inlineCheckboxProgram01(type="checkbox" value="Program01")
									| 7.00 - 10.00
								label.checkbox-inline(disabled="disabled")
									input#inlineCheckboxProgram02(type="checkbox" value="Program02" disabled="disabled")
									| 10.00 - 13.00
								label.checkbox-inline
									input#inlineCheckboxProgram03(type="checkbox" value="Program03")
									| 13.00 - 16.00
								label.checkbox-inline(disabled="disabled")
									input#inlineCheckboxProgram04(type="checkbox" value="Program04" disabled="disabled")
									| 16.00 - 19.00
							.col-xs-12.text-center.sectionPadding
								a.btn.btn-lg.btn-ghost-type_two(href="formular.html")
									| Inscrie-te acum



	// popUP categorii de virsta ?
	#categoriiVarsta.modal.fade
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type="button" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") &times;
					h4.modal-title Categorii de vista
				.modal-body
					p Iconitele de mai jos reprezinta categoriile de virsta in modul urmator:
					.pull-left 5-7 ani
					.pull-right.a
							include assets/images/children_size.svg
					.clearfix
					.pull-left 8-12 ani
					.pull-right.b
							include assets/images/children_size.svg
					.clearfix
					.pull-left 12-14 ani
					.pull-right.c
							include assets/images/children_size.svg
					.clearfix
				.modal-footer
					button.btn.btn-default(type="button" data-dismiss="modal") Inchide fereastra
					//- button.btn.btn-primary(type="button") Inchide fereastra