extends views/layout

block content
	section.form
		.container-fluid
			.col-xs-12
				// title Post
				h1.text-center
					| Formular de inscriere
					br
					small ideal ar fi sa completati fomrularul de mai jos
		.container
			.row
				.col-xs-12

					form
						.row
							.col-xs-12
								h3 Datele dumencvostra
							.col-xs-12
								.form-group
									label(for="Numele")
										| Numele dumenvoastra
									input(type="input" class="form-control" id="Numele" placeholder="numele complet va rugam")

							.col-xs-12.col-sm-6
								.form-group
									label(for="Email")
										| Email
									input(type="input" class="form-control" id="Email" placeholder="email de contact")

							.col-xs-12.col-sm-6
								.form-group
									label(for="Tel")
										| Telefon
									input(type="input" class="form-control" id="Tel" placeholder="telefon sau mobil")
							.col-xs-12
								h3 Datele Copilului
							.col-xs-12.col-sm-6
								.form-group
									label(for="Prenumele")
										| Prenumele
									input(type="input" class="form-control" id="Prenumele copilului" placeholder="prenumele copilului")
								.form-group
									label(for="dataNastere")
										| Data de nastere a copilului
									input(type="input" class="form-control" id="dataNastere" placeholder="in acest format dd/mm/yyyy")
								.form-group
									label(for="vista")
										| Categoria de virsta
									select(id="disabledSelect" class="form-control")
										option Alege categoria de virsta
										option 5-7 ani
										option 8-12 ani
										option 12-14 ani

							.col-xs-12.col-sm-6
								.form-group
									label(for="exampleInputEmail1")
										| Categoria de virsta
									textarea(class="form-control" rows="8")
						.row
							.col-xs-12
								h3 Optiuni pentru acest curs
								h5 Ce zile preferati
							.col-xs-12
								label.checkbox-inline
									input#inlineCheckboxLuni(type="checkbox" value="optionLuni")
									| Luni
