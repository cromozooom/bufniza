	// popUP categorii de virsta ?
	#categoriiVarsta.modal.fade
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type="button" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") &times;
					h4.modal-title Categorii de vista
				.modal-body
					p Iconitele de mai jos reprezinta categoriile de virsta in modul urmator:
					.pull-left 5-7 ani
					.pull-right.a
							include assets/images/children_size.svg
